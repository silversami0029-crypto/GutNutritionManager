<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.GutNutritionManager">
        <activity
            android:name=".QuickFoodItemActivity"
            android:exported="false" />
        <activity
            android:name=".FoodAdviceActivity"
            android:parentActivityName=".NutritionDetailActivity" />
        <activity
            android:name=".ItemAdviceActivity"
            android:exported="false" />
        <activity
            android:name=".NutritionDetailActivity"
            android:parentActivityName=".DiaryFragment" />
        <activity
            android:name=".ItemNutrientActivity"
            android:exported="false" />
        <!--
<activity
            android:name=".NutritionDetailActivity"
            android:exported="false" />
        -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>