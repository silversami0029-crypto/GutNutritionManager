<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@color/background_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_symptoms"
                    android:layout_marginEnd="16dp"
                    app:tint="@color/primary_light" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Track Your Symptoms"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_dark" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Monitor how you feel to identify patterns"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Symptom Input Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="20dp"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Symptom Type -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Symptom Type"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@color/primary_light"
                    app:hintTextColor="@color/primary_light"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/symptomNameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="e.g., Bloating, Pain, Gas"
                        android:textSize="16sp"
                        android:padding="16dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Severity Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Severity Level"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_dark"
                    android:layout_marginBottom="12dp" />

                <!-- Severity Scale with Emojis -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="😊"
                        android:textSize="12sp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="😐"
                        android:textSize="12sp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="😕"
                        android:textSize="12sp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="😣"
                        android:textSize="12sp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="😫"
                        android:textSize="12sp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Severity Radio Buttons with Colors -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="1dp"
                    android:padding="8dp">



                    <RadioGroup
                        android:id="@+id/severityRadioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/severity1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="1"
                            android:buttonTint="@color/primary_light" />

                        <RadioButton
                            android:id="@+id/severity2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="2"
                            android:buttonTint="@color/primary_light" />

                        <RadioButton
                            android:id="@+id/severity3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="3"
                            android:buttonTint="@color/primary_light" />

                        <RadioButton
                            android:id="@+id/severity4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="4"
                            android:buttonTint="@color/primary_light" />

                        <RadioButton
                            android:id="@+id/severity5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="5"
                            android:buttonTint="@color/primary_light" />
                    </RadioGroup>






                </com.google.android.material.card.MaterialCardView>

                <!-- Severity Labels -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mild"
                        android:textSize="10sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Moderate"
                        android:textSize="10sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Severe"
                        android:textSize="10sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Log Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/logSymptomButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Log Symptom"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_add"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            android:layout_marginTop="8dp"
            app:backgroundTint="@color/primary_light" />

        <!-- Quick Symptoms Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginTop="24dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quick Symptoms"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_dark"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBloating"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bloating"
                        android:textSize="12sp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:cornerRadius="8dp"
                        android:padding="8dp"
                        app:backgroundTint="#E3F2FD"
                        android:textColor="#1976D2" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPain"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pain"
                        android:textSize="12sp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:cornerRadius="8dp"
                        android:padding="8dp"
                        app:backgroundTint="#FFEBEE"
                        android:textColor="#D32F2F" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGas"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Gas"
                        android:textSize="12sp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:cornerRadius="8dp"
                        android:padding="8dp"
                        app:backgroundTint="#F3E5F5"
                        android:textColor="#7B1FA2" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDiarrhea"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Diarrhea"
                        android:textSize="12sp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:cornerRadius="8dp"
                        android:padding="8dp"
                        app:backgroundTint="#E8F5E8"
                        android:textColor="#388E3C" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnConstipation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fatigue"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:cornerRadius="8dp"
                        android:padding="8dp"
                        app:backgroundTint="#FFF3E0"
                        android:textColor="#F57C00" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnNausea"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nausea"
                        android:textSize="12sp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:cornerRadius="8dp"
                        android:padding="8dp"
                        app:backgroundTint="#E0F2F1"
                        android:textColor="#00796B" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>